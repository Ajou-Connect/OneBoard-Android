<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="kr.khs.oneboard.data.AttendanceLesson" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/attendanceLessonDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@{item.date}"
            app:layout_constraintBottom_toTopOf="@+id/attendanceLessonDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="10/28" />

        <TextView
            android:id="@+id/attendanceLessonDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{item.description}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/attendanceLessonCheckbox"
            app:layout_constraintStart_toStartOf="@+id/attendanceLessonDate"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1주차 - 목 (16:30~21:00)" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/attendanceLessonCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/attendanceLessonDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/attendanceLessonDescription"
            tools:checked="true"
            tools:text="출석" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>